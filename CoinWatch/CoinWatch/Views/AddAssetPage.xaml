<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoinWatch.Views.AddAssetPage">

    <ContentPage.Content>
        <StackLayout Margin="16" Spacing="0" VerticalOptions="Center">
            <Label FontAttributes="Bold" Text="Login" FontSize="Medium" TextColor="SteelBlue" />
            <Frame BackgroundColor="GhostWhite" OutlineColor="LightSteelBlue" Margin="2,16" Padding="16,0" BorderColor="SteelBlue" HasShadow="True">
                <StackLayout Spacing="0">
                    <Grid RowSpacing="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Label Text="Coin" FontAttributes="Bold" TextColor="Black" VerticalOptions="Center" />
                        <Entry x:Name="entCoin" TextColor="Black" Grid.Column="1" />
                    </Grid>
                </StackLayout>
            </Frame>
            <Button x:Name="btnList" Text="GO" TextColor="White" BackgroundColor="SteelBlue" Margin="0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>